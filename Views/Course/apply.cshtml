@model Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>apply</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
     <div class="container m-4">
       <div class="card mx-auto" style="width:500px;">
           <div class="card-header">
               Başvuru Formu    
           </div>
           <div class="card-body">
              <form asp-action="apply" method="post">

        <div asp-validation-summary="All">  </div>
        <div class="form-group"><label asp-for="name">İsim</label>
            <input asp-for="name">
        </div>
        <div class="form-group"><label asp-for="email">Email</label>
            <input asp-for="email">
        </div>
        <div class="form-group"><label asp-for="phone">Phone</label>
            <input asp-for="phone">
        </div>
        <div class="form-group"><label asp-for="confirm">Kursa Katılacak mısınız?</label>
           <select asp-for="confirm" >
                <option value="true">Evet</option>
                <option value="false">Hayır</option>
           </select>
        </div>
       <div class="form-control">
             <input class="btn btn-primary btn-block" type="submit" value="Submit">
       </div>
      
    </form>
           </div>
       </div>  
   </div>


</body>
</html>